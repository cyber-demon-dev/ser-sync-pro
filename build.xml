<?xml version="1.0" encoding="UTF-8"?>
<project name="ssync-pro" default="all" basedir=".">
    
    <description>
        ssync-pro - Serato crate synchronization tool
        Build script for compiling and packaging the application
    </description>
    
    <!-- Properties -->
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="out/production/ssync-pro"/>
    <property name="dist.dir" value="distr/ssync-pro"/>
    <property name="jar.name" value="ssync-pro.jar"/>
    <property name="props.template" value="ssync.properties.template"/>
    <property name="main.class" value="ssync_main"/>
    
    <!-- Compiler settings -->
    <property name="java.source" value="11"/>
    <property name="java.target" value="11"/>
    
    <!-- Clean target -->
    <target name="clean" description="Remove all generated files">
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>
    
    <!-- Compile target -->
    <target name="compile" description="Compile source files">
        <mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}" 
               destdir="${build.dir}" 
               source="${java.source}" 
               target="${java.target}"
               includeantruntime="false"
               debug="on">
        </javac>
    </target>
    
    <!-- Package target -->
    <target name="jar" depends="compile" description="Create JAR file">
        <mkdir dir="${dist.dir}"/>
        <jar destfile="${dist.dir}/${jar.name}" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main.class}"/>
                <attribute name="Built-By" value="${user.name}"/>
                <attribute name="Build-Date" value="${TODAY}"/>
            </manifest>
        </jar>
        <copy file="${props.template}" tofile="${dist.dir}/ssync.properties"/>
    </target>
    
    <!-- Run target -->
    <target name="run" depends="jar" description="Run the application">
        <java jar="${dist.dir}/${jar.name}" fork="true"/>
    </target>
    
    <!-- Default target -->
    <target name="all" depends="clean, jar" description="Clean and build everything"/>
    
</project>